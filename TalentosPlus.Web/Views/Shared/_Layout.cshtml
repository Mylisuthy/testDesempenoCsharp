<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentosPlus</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom Design System -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- FontAwesome (Free CDN) for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="fa-solid fa-rocket me-2"></i> TalentosPlus
            </div>
            
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                           asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-house"></i> Overview
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" 
                           asp-controller="Dashboard" asp-action="Index">
                            <i class="fa-solid fa-chart-line"></i> AI Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "active" : "")" 
                           asp-controller="Employees" asp-action="Index">
                            <i class="fa-solid fa-users"></i> Employees
                        </a>
                    </li>
                    <!-- Add more links here like Departments if needed -->
                </ul>
            </nav>

            <div class="p-3 border-top border-secondary">
                 <div class="d-flex align-items-center mb-2">
                     <div class="avatar-circle bg-gradient-primary text-white me-2">
                        <i class="fa-solid fa-user"></i>
                     </div>
                     <div class="overflow-hidden">
                         <div class="fw-bold text-white small text-truncate">@User.Identity?.Name</div>
                         <div class="text-muted extra-small">Administrator</div>
                     </div>
                 </div>
                 <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                     <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                         <i class="fa-solid fa-right-from-bracket me-1"></i> Sign Out
                     </button>
                 </form>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header (Optional, mostly for title/breadcrumbs) -->
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 text-white fw-bold mb-0">@ViewData["Title"]</h2>
                <div>
                     <!-- Could put search or notifications here -->
                     <!-- Notifications placeholder removed as per cleanup -->
                </div>
            </header>

            <!-- Alerts -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-circle-check me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa-solid fa-triangle-exclamation me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
